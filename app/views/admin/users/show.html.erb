<h2><%= @user.name %>さんのタスク一覧ページ</h2>
<table class='table table-striped'>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先順位</th>
  </tr>
  <% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.limit_date %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
<% end %>
</table>
<%= link_to 'ユーザー一覧に戻る',admin_users_path,class: 'btn btn-primary' %>
